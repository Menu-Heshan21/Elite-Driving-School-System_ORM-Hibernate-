<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="890.0" style="-fx-background-color: #F8FAFC;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PaymentController">
    <children>
        <AnchorPane layoutX="26.0" layoutY="31.0" prefHeight="260.0" prefWidth="840.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Payment Details" textFill="#1E293B">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <TextField fx:id="txtAmount" layoutX="49.0" layoutY="62.0" prefHeight="40.0" prefWidth="180.0" promptText="Amount" style="-fx-background-radius: 8; -fx-background-color: #F1F5F9; -fx-text-fill: #334155; -fx-prompt-text-fill: #64748B; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-border-width: 1;" />
                <DatePicker fx:id="dpDate" layoutX="249.0" layoutY="62.0" prefHeight="40.0" prefWidth="180.0" promptText="Date" style="-fx-background-radius: 8; -fx-background-color: #F1F5F9; -fx-text-fill: #334155; -fx-prompt-text-fill: #64748B; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-border-width: 1;" />
                <ComboBox fx:id="cmbStatus" layoutX="449.0" layoutY="62.0" prefHeight="40.0" prefWidth="160.0" promptText="Status" style="-fx-background-radius: 8; -fx-background-color: #F1F5F9; -fx-text-fill: #334155; -fx-prompt-text-fill: #64748B; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-border-width: 1;" />
                <ComboBox fx:id="cmbStudent" layoutX="629.0" layoutY="62.0" prefHeight="40.0" prefWidth="180.0" promptText="Select Student" style="-fx-background-radius: 8; -fx-background-color: #F1F5F9; -fx-text-fill: #334155; -fx-prompt-text-fill: #64748B; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-border-width: 1;" />

                <Button fx:id="btnSavePayment" layoutX="49.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3B82F6; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(59,130,246,0.3), 8, 0, 0, 2);" text="Save" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdatePayment" layoutX="159.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #10B981; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.3), 8, 0, 0, 2);" text="Update" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnDeletePayment" layoutX="269.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #EF4444; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(239,68,68,0.3), 8, 0, 0, 2);" text="Delete" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnResetPayment" layoutX="379.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #6B7280; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(107,114,128,0.3), 8, 0, 0, 2);" text="Reset" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="26.0" layoutY="320.0" prefHeight="350.0" prefWidth="840.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <children>
                <TableView fx:id="tblPayments" layoutX="14.0" layoutY="14.0" prefHeight="253.0" prefWidth="812.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="colPaymentId" prefWidth="120.0" text="Payment ID" />
                        <TableColumn fx:id="colAmount" prefWidth="150.0" text="Amount" />
                        <TableColumn fx:id="colDate" prefWidth="170.0" text="Date" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="colStudentId" prefWidth="220.0" text="Student ID" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
