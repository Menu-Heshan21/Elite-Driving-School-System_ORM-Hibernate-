<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1300.0" style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.UserManagementController">
    <children>

        <!-- Header Section -->
        <VBox layoutX="30.0" layoutY="20.0" prefHeight="80.0" prefWidth="1240.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1240.0" spacing="15.0">
                    <children>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Images/Icons/user-management.png" />
                            </image>
                        </ImageView>
                        <Label text="User Management System" textFill="#00d4ff">
                            <font>
                                <Font name="System Bold" size="26.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Separator prefWidth="1240.0" style="-fx-background-color: #0f3460;" />
            </children>
        </VBox>

        <!-- User Form Section -->
        <AnchorPane layoutX="30.0" layoutY="120.0" prefHeight="280.0" prefWidth="1240.0" style="-fx-background-color: rgba(15, 52, 96, 0.8); -fx-background-radius: 15; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 15;">
            <children>

                <!-- Form Header -->
                <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="15.0" prefHeight="40.0" prefWidth="1190.0" spacing="10.0">
                    <children>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Images/Icons/form-icon.png" />
                            </image>
                        </ImageView>
                        <Label text="User Information" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Form Fields Row 1 -->
                <HBox layoutX="25.0" layoutY="70.0" prefHeight="50.0" prefWidth="1190.0" spacing="20.0">
                    <children>
                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Username" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="280.0" promptText="Enter username" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Full Name" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtFullName" prefHeight="35.0" prefWidth="280.0" promptText="Enter full name" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Email Address" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtEmail" prefHeight="35.0" prefWidth="280.0" promptText="Enter email address" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Phone Number" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtPhone" prefHeight="35.0" prefWidth="280.0" promptText="Enter phone number" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Form Fields Row 2 -->
                <HBox layoutX="25.0" layoutY="140.0" prefHeight="50.0" prefWidth="1190.0" spacing="20.0">
                    <children>
                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Password" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="txtPassword" prefHeight="35.0" prefWidth="280.0" promptText="Enter password" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </PasswordField>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="User Role" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbRole" prefHeight="35.0" prefWidth="280.0" promptText="Select role" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8;">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Account Status" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbStatus" prefHeight="35.0" prefWidth="280.0" promptText="Select status" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8;">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                            </children>
                        </VBox>

                        <VBox prefHeight="50.0" prefWidth="280.0" spacing="5.0">
                            <children>
                                <Label text="Department" textFill="#00d4ff">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbDepartment" prefHeight="35.0" prefWidth="280.0" promptText="Select department" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8;">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" layoutX="25.0" layoutY="220.0" prefHeight="50.0" prefWidth="1190.0" spacing="15.0">
                    <children>
                        <Button fx:id="btnClear" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #757575, #616161); -fx-background-radius: 10; -fx-border-color: #9e9e9e; -fx-border-radius: 10;" text="Clear Form" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #f44336, #d32f2f); -fx-background-radius: 10; -fx-border-color: #ff5722; -fx-border-radius: 10;" text="Delete User" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #ff9800, #f57c00); -fx-background-radius: 10; -fx-border-color: #ffc107; -fx-border-radius: 10;" text="Update User" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #4caf50, #388e3c); -fx-background-radius: 10; -fx-border-color: #66bb6a; -fx-border-radius: 10;" text="Save User" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>

            </children>
        </AnchorPane>

        <!-- Search and Filter Section -->
        <AnchorPane layoutX="30.0" layoutY="420.0" prefHeight="60.0" prefWidth="1240.0" style="-fx-background-color: rgba(15, 52, 96, 0.6); -fx-background-radius: 10; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10;">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="10.0" prefHeight="40.0" prefWidth="1200.0" spacing="20.0">
                    <children>
                        <Label text="Search & Filter:" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <TextField fx:id="txtSearch" prefHeight="35.0" prefWidth="300.0" promptText="Search by username, email or name..." style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #7cb9e8;">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </TextField>

                        <ComboBox fx:id="cmbFilterRole" prefHeight="35.0" prefWidth="150.0" promptText="Filter by Role" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8;">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ComboBox>

                        <ComboBox fx:id="cmbFilterStatus" prefHeight="35.0" prefWidth="150.0" promptText="Filter by Status" style="-fx-background-color: #0a1929; -fx-background-radius: 8; -fx-border-color: #00d4ff; -fx-border-radius: 8;">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ComboBox>

                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearchOnAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #2196f3, #1976d2); -fx-background-radius: 8; -fx-border-color: #64b5f6; -fx-border-radius: 8;" text="Search" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#btnRefreshOnAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #9c27b0, #7b1fa2); -fx-background-radius: 8; -fx-border-color: #ba68c8; -fx-border-radius: 8;" text="Refresh" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- Users Table Section -->
        <AnchorPane layoutX="30.0" layoutY="500.0" prefHeight="220.0" prefWidth="1240.0" style="-fx-background-color: rgba(15, 52, 96, 0.8); -fx-background-radius: 15; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 15;">
            <children>

                <!-- Table Header -->
                <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="15.0" prefHeight="30.0" prefWidth="1190.0" spacing="10.0">
                    <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Images/Icons/table-icon.png" />
                            </image>
                        </ImageView>
                        <Label text="Users Database" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Table View -->
                <TableView fx:id="tblUsers" layoutX="25.0" layoutY="50.0" prefHeight="155.0" prefWidth="1190.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #00d4ff; -fx-border-radius: 10; -fx-border-width: 2;">
                    <columns>
                        <TableColumn fx:id="colUserId" minWidth="80.0" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colUsername" minWidth="150.0" prefWidth="180.0" text="Username" />
                        <TableColumn fx:id="colFullName" minWidth="200.0" prefWidth="250.0" text="Full Name" />
                        <TableColumn fx:id="colEmail" minWidth="200.0" prefWidth="280.0" text="Email Address" />
                        <TableColumn fx:id="colPhone" minWidth="120.0" prefWidth="150.0" text="Phone" />
                        <TableColumn fx:id="colRole" minWidth="100.0" prefWidth="120.0" text="Role" />
                        <TableColumn fx:id="colDepartment" minWidth="100.0" prefWidth="130.0" text="Department" />
                        <TableColumn fx:id="colStatus" minWidth="80.0" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="colActions" minWidth="90.0" prefWidth="90.0" text="Actions" />
                    </columns>
                </TableView>

            </children>
        </AnchorPane>

    </children>
</AnchorPane>